{
	"name": "extract-react-component",
	"displayName": "extract-react-component",
	"description": "Extracts a react component from selected jsx",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extract-react-component.extractComponent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Extract React Component",
			"properties": {
				"extractReactComponent.functionSyntax": {
					"type": "string",
					"enum": [
						"function",
						"arrow function"
					],
					"enumDescriptions": [
						"Create the new function using traditional function syntax",
						"Create the new function using arrow function syntax"
					],
					"default": "function",
					"description": "Syntax used to create new functional component"
				},
				"extractReactComponent.componentName": {
					"type": "string",
					"default": "ExtractedComponent",
					"description": "The name of the new extracted component"
				},
				"extractReactComponent.filenameCasing": {
					"type": "string",
					"enum": [
						"camel case",
						"pascal case"
					],
					"default": "camel case",
					"description": "The casing style to use when creating a new file"
				}
			}
		},
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == typescriptreact && editorHasSelection",
					"command": "extract-react-component.extractComponent",
					"group": "9_cutcopypaste"
				}
			]
		},
		"commands": [
			{
				"command": "extract-react-component.extractComponent",
				"title": "Extract Component"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-typescript": "^8.0.2",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"prettier": "^2.0.5",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}